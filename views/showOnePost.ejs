<% include ./partials/header %>
    <section>
      <div class="container">
        <div class="post-box">
          <h1>Show one post</h1>
          <p><%=result[0].title%></p>
          <p><%=result[0].content%></p>
          <a class='btn' href="/blog/show/edit/<%=result[0].post_id%>">Edit</a>
          <a class='btn btn-delete' href="/blog/delete/<%=result[0].post_id%>">Delete</a>
          <a class='btn' href="/blog/">Back</a>
        </div>


      </div>

    </section>

    <section>
      <div class="container">
        <div class="comment-box">
          <h3>POST A COMMENT</h3><br>
          <form class="" action="/blog/show/comment/<%=result[0].post_id%>" method="post">

            <textarea name="comment" rows="4" cols="15"></textarea><br>
            <button class='btn' type="submit" name="button">Submit</button>
          </form>

        </div>
        <div class="comment-box">
          <h3>Comments</h3><br>
          <%result.forEach(item=>{ %>
            <p><%=item.guest_name%>:<%=item.comment%></p><br>
          <%})%>
        </div>

      </div>

    </section>
<% include ./partials/footer %>
